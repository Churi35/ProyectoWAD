<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>Inicio</servlet-name>
        <servlet-class>servlets.Inicio</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Login</servlet-name>
        <servlet-class>servlets.Login</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Logout</servlet-name>
        <servlet-class>servlets.Logout</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Registro</servlet-name>
        <servlet-class>servlets.Registro</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AgregarCarrito</servlet-name>
        <servlet-class>servlets.AgregarCarrito</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Carrito</servlet-name>
        <servlet-class>servlets.Carrito</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Descripcionpastel</servlet-name>
        <servlet-class>servlets.Descripcionpastel</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>FormularioPagar</servlet-name>
        <servlet-class>servlets.FormularioPagar</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>RealizarCompra</servlet-name>
        <servlet-class>servlets.RealizarCompra</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>HistorialCompras</servlet-name>
        <servlet-class>servlets.HistorialCompras</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Inicio</servlet-name>
        <url-pattern>/Inicio</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Login</servlet-name>
        <url-pattern>/Login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Logout</servlet-name>
        <url-pattern>/Logout</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Registro</servlet-name>
        <url-pattern>/Registro</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AgregarCarrito</servlet-name>
        <url-pattern>/AgregarCarrito</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Carrito</servlet-name>
        <url-pattern>/Carrito</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Descripcionpastel</servlet-name>
        <url-pattern>/Descripcionpastel</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>FormularioPagar</servlet-name>
        <url-pattern>/FormularioPagar</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>RealizarCompra</servlet-name>
        <url-pattern>/RealizarCompra</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>HistorialCompras</servlet-name>
        <url-pattern>/HistorialCompras</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
